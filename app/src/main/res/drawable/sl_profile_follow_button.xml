<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/app_work_orange3" />
            <solid android:color="@color/app_work_orange3" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:radius="10dip" />
            <gradient android:angle="-45" android:centerColor="@color/app_work_orange2" android:endColor="@color/app_work_orange3" android:startColor="@color/app_work_orange1" />
        </shape>
    </item>
</selector>