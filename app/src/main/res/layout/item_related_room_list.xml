<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/image_room_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/add_image_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/image_room_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="標題/如果私聊show username" />

    <TextView
        android:id="@+id/text_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/text_room_title"
        app:layout_constraintTop_toBottomOf="@id/text_room_title"
        tools:text="晚安 明天見！" />

    <TextView
        android:id="@+id/text_last_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_room_title"
        tools:text="9:57" />

</androidx.constraintlayout.widget.ConstraintLayout>