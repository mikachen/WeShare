<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".manage.distribution.DistributeFragment">

    <TextView
        android:id="@+id/title_people_who_asked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="當前索取人"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="8dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView_peoples"
        app:layout_constraintTop_toBottomOf="@id/title_people_who_asked"/>

    <ScrollView
        android:id="@+id/scrollView_peoples"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">






    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>