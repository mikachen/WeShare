<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/base_target_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintEnd_toStartOf="@id/text_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_targe_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/add_image_holder" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/base_target_image"
        app:layout_constraintTop_toTopOf="@id/base_target_image"
        tools:text="message content here.message content here."
        android:background="@drawable/shape_receive_message_round"
        style="@style/chatroom_message_textview" />


    <TextView
        android:id="@+id/text_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/text_message"
        app:layout_constraintStart_toEndOf="@id/text_message"
        tools:text="9:11" />

</androidx.constraintlayout.widget.ConstraintLayout>


