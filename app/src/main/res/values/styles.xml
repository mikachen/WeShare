<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="chatroom_message_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:maxEms">12</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="profile_userlog_string">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="profile_userlog_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#CC363636</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
        <item name="sv_showcaseColor">@color/showcase_blue</item>
        <item name="sv_tintButtonColor">true</item>

    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/showcase_blue_title</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>